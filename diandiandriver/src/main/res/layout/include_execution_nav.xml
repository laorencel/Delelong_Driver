<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_20px"
        android:layout_marginLeft="@dimen/margin_100px"
        android:layout_marginRight="@dimen/margin_100px"
        android:layout_marginTop="@dimen/margin_20px"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ly_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_exec_nav" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20px"
                android:text="导航"
                android:textColor="@color/lightBlack"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_btn_start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20px"
                android:text="出发"
                android:textColor="@color/lightBlack"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_btn_end" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20px"
                android:text="结束"
                android:textColor="@color/lightBlack"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>