<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00bebebe"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/arrow_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/arr_right_white" />

        <TextView
            android:id="@+id/tv_actionBarInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="余额充值"
            android:textColor="#ffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#49cccccc"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="我的余额(元)"
                android:textColor="#ffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_myBalance"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="0.0 元"
                android:textColor="@color/colorPinChe"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_sum_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_alpha_corner_edt"
                android:gravity="center"
                android:padding="10dp"
                android:text="300.0"
                android:textColor="#ffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_sum_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_alpha_corner_edt"
                android:gravity="center"
                android:padding="10dp"
                android:text="500.0"
                android:textColor="#ffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_sum_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_alpha_corner_edt"
                android:gravity="center"
                android:padding="10dp"
                android:text="1000.0"
                android:textColor="#ffff"
                android:textSize="18sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <EditText
                android:id="@+id/edt_sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_alpha_corner_edt"
                android:digits="0123456789"
                android:hint="自定义金额"
                android:padding="10dp"
                android:textColor="#ffff"
                android:textColorHint="#dfdfdf" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ly_pay_ali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_balance_ali"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/icon_ali" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="支付宝"
                android:textColor="#ffff"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
