<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <com.amap.api.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.amap.api.maps.MapView>

        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#cfcacaca"
            android:padding="10dp">

            <ImageView
                android:id="@+id/img_map_top01"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_car" />

            <TextView
                android:id="@+id/tv_map_top01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/img_map_top01"
                android:text="当前地址："
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_map_top02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_map_top01"
                android:text="北京天安门"
                android:textColor="#43b760"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_map_top02"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_arrow_down_map" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/loc"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@id/rl_top"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/loc" />
    </RelativeLayout>

</RelativeLayout>
