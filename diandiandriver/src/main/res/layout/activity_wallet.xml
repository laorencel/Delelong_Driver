<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#eaeaea"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#ffff"
        android:padding="13dp">

        <ImageButton
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/back_arrow" />

        <TextView
            android:id="@+id/tv_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的钱包"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_pay"
        android:layout_width="match_parent"
        android:background="@drawable/bg_text_custome"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_pay"
            android:layout_width="20dp"
            android:src="@drawable/icon_pay"
            android:layout_marginRight="10dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_toRightOf="@id/img_pay"
            android:layout_width="wrap_content"
            android:text="支付方式"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:text="支付宝"
            android:layout_marginRight="25dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_sum"
        android:layout_width="match_parent"
        android:background="@drawable/bg_text_custome"
        android:padding="10dp"
        android:layout_marginBottom="1dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_sum"
            android:layout_width="20dp"
            android:src="@drawable/icon_sum"
            android:layout_marginRight="10dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_toRightOf="@id/img_sum"
            android:layout_width="wrap_content"
            android:text="余额"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_sum"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""
            android:layout_marginRight="25dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_tixian"
        android:layout_width="match_parent"
        android:background="@drawable/bg_text_custome"
        android:padding="10dp"
        android:layout_marginBottom="1dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_tixian"
            android:layout_width="20dp"
            android:src="@drawable/icon_sum"
            android:layout_marginRight="10dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_toRightOf="@id/img_tixian"
            android:layout_width="wrap_content"
            android:text="提现"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_tixian_sum"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""
            android:layout_marginRight="25dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_invoice"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:background="@drawable/bg_text_custome"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_invoice"
            android:layout_width="20dp"
            android:src="@drawable/icon_invoice"
            android:layout_marginRight="10dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_toRightOf="@id/img_invoice"
            android:layout_width="wrap_content"
            android:text="发票报销"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
